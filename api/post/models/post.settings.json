{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "miniature": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "seo_title": {
      "type": "string",
      "unique": false,
      "required": true
    },
    "seo_description": {
      "type": "text",
      "required": true,
      "maxLength": 200
    }
  }
}
